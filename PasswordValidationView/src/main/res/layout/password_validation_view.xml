<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".PasswordValidationView"
    android:baselineAligned="false">

    <include
        android:id="@+id/lowercase_lay"
        layout="@layout/lowercase_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/uppercase_lay"
        layout="@layout/uppercase_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/digits_lay"
        layout="@layout/digits_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/special_char_lay"
        layout="@layout/special_char_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/length_lay"
        layout="@layout/length_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>